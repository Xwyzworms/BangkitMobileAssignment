<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Submission2_Ezpz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_300</item>
        <item name="colorSecondaryVariant">@color/cyna_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ImageViewBase">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>


    <style name="TextWidthParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextWidthParent.Header">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextWidthParent.normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextWidthParent.small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextWrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextWrapped.Header">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="TextWrapped.normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextWrapped.small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextDrawable">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>