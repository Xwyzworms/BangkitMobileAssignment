<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Submission1_githubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_300</item>
        <item name="colorSecondaryVariant">@color/cyna_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextComponentWrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextComponentWrapped.title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextComponentWrapped.subtitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextComponentWrapped.subtitle.small">
        <item name="android:layout_weight">0.2</item>
    </style>

    <style name="TextComponentWrapped.subtitle.normal">
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="TextComponentWrapped.normal">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">0.8</item>
    </style>

    <style name="TextComponentWrapped.normal_small">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_weight">0.2</item>
    </style>


    <!-- Table Style-->

    <style name="TableRowBaseComponent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>


    <style name="TableRowBaseComponent.gray">
        <item name="android:background">@color/gray_700</item>
    </style>

    <style name="TableRowBaseComponent.bright">
        <item name="android:background">@color/white_300</item>
    </style>

</resources>